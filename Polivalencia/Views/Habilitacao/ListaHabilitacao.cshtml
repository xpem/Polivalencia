@model IEnumerable<ModelLayer.Habilitacao>

@{
    ViewBag.Title = "ListaHabilitacao";
}

<h2>Habilitações</h2>
<h4> @ViewData["NomeFuncionario"]</h4>

<p>
    @Html.ActionLink("Create New", "AddHabilitacao",new { idfunc=ViewData["IdFunc"], idhab = 0})
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.DtValidade)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NomePostoTrab)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem =>  item.DtValidade)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NomePostoTrab)
        </td>
        <td>
            @Html.ActionLink("Editar", "AddHabilitacao", new { idfunc = ViewData["IdFunc"], idhab = item.Id }, new { @class = "btn btn-warning btn-sm" })
            @Html.ActionLink("Excluir", "Delhabilitacao", new { idfunc = ViewData["IdFunc"], idhab = item.Id  }, new { @class = "btn btn-danger btn-sm" })
        </td>
    </tr>
}

</table>
